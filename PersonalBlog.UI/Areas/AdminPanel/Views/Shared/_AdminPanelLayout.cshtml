
@{
    Layout = null;
    string culture = CultureInfo.CurrentCulture.Name;
    var returnUrl = string.IsNullOrWhiteSpace(Context.Request.Path) ? "~/" : $"{Context.Request.Path.Value}{Context.Request.QueryString}";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>

    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/AdminPanel/css/vendor.bundle.base.css" rel="stylesheet" />
    <link href="~/AdminPanel/css/style.css" rel="stylesheet" />

    <link  rel="shortcut icon" href="~/AdminPanel/img/favicon.png" />
</head>
<body>
    <div class="container-scroller">

        <nav class="sidebar sidebar-offcanvas" id="sidebar">
            <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
                <a class="sidebar-brand brand-logo" asp-action="AdminPanel" asp-controller="Home" asp-area="AdminPanel"><img src="~/AdminPanel/img/logo.svg" /></a>
                <a class="sidebar-brand brand-logo-mini" asp-action="AdminPanel" asp-controller="Home" asp-area="AdminPanel"><img src="~/AdminPanel/img/logo-mini.svg" /></a>
            </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@localizer["welcome"]</h5>

                            </div>
                        </div>
                        <a href="#" id="profile-dropdown" data-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></a>
                        <div class="dropdown-menu dropdown-menu-right sidebar-dropdown preview-list" aria-labelledby="profile-dropdown">
                            <a asp-action="Settings" asp-controller="Home" asp-area="AdminPanel" class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject ellipsis mb-1 text-small">@localizer["settings"]</p>
                                </div>
                            </a>
                            <a asp-action="LogOut" asp-controller="Home" asp-area="AdminPanel" class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject ellipsis mb-1 text-small">@localizer["logout"]</p>
                                </div>
                            </a>

                        </div>
                    </div>
                </li>
                <li class="nav-item nav-category">

                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Index" asp-controller="PersonalInfo" asp-area="AdminPanel">
                        <span class="menu-title">@localizer["personalinfo"]</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Contacts" asp-controller="Contact" asp-area="AdminPanel">
                        <span class="menu-title">@localizer["contacts"]</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Skills" asp-controller="Skill" asp-area="AdminPanel">
                        <span class="menu-title">@localizer["skills"]</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Experiences" asp-controller="Experince" asp-area="AdminPanel">
                        <span class="menu-title">@localizer["experience"]</span>
                    </a>
                </li>
                <li class="nav-item menu-items">
                    <a class="nav-link" asp-action="Blogs" asp-controller="Blog" asp-area="AdminPanel">
                        <span class="menu-title">@localizer["blogs"]</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container-fluid page-body-wrapper">

            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="d-flex justify-content-end">
                    @if (culture == "tr")
                    {
                        <a asp-action="CultureManagement" asp-controller="Home" asp-route-culture="en" asp-area="AdminPanel" asp-route-returnUrl="@returnUrl" class="mt-3"><img src="~/img/d2b51e06-b31f-4e0d-81a5-e566348d9ff2.png" /></a>
                    }
                    else
                    {
                        <a asp-action="CultureManagement" asp-controller="Home" asp-route-culture="tr" asp-area="AdminPanel" asp-route-returnUrl="@returnUrl" class="mt-3"><img src="~/img/a0ea529d-d785-440b-a33f-c6736620b024.png" /></a>
                    }
                </div>
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" asp-action="AdminPanel" asp-controller="Home" asp-area="AdminPanel"><img src="~/AdminPanel/img/logo-mini.svg" alt="logo" /></a>
                </div>

                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <i class="fas fa-bars"></i>
                    </button>

                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>

            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>

                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">I <i class="fas fa-heart" style="color:red;"></i> Coding</span>

                    </div>
                </footer>

            </div>

        </div>

    </div>

    <script src="~/AdminPanel/js/vendor.bundle.base.js"></script>


    <script src="~/AdminPanel/js/off-canvas.js"></script>
    <script src="~/AdminPanel/js/hoverable-collapse.js"></script>
    <script src="~/AdminPanel/js/misc.js"></script>
    <script src="~/AdminPanel/js/settings.js"></script>

</body>
</html>
