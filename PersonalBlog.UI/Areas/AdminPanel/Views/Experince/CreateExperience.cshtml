@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}

@model CreateExperienceVM
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@localizer["createExperience"]</h4>
                <form class="forms-sample" asp-route="CreateExperience" method="post">
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["jobtitle"] (TR)</label>
                        <input type="text" class="form-control" asp-for="JobTitleTr">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["jobtitle"] (EN)</label>
                        <input type="text" class="form-control" asp-for="JobTitleEn">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["company"]</label>
                        <input type="text" class="form-control" asp-for="Company">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["startDate"]</label>
                        <input type="date" class="form-control" asp-for="StartDate">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["endDate"]</label>
                        <input type="date" class="form-control" asp-for="EndDate">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["description"] (TR)</label>
                        <input type="text" class="form-control" asp-for="DescriptionTR">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["description"] (EN)</label>
                        <input type="text" class="form-control" asp-for="DescriptionEN">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">@localizer["save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>