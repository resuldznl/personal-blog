@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}
@model UpdateSkillVM
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-route="CreateSkill" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["skillName"]</label>
                        <input type="text" class="form-control" asp-for="SkillName">
                        <span asp-validation-for="SkillName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["degree"]</label>
                        <input type="number" min="0" class="form-control" asp-for="Degree">
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">@localizer["save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>


