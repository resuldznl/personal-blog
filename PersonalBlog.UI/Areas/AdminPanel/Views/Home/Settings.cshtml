@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}

@model UpdateAdminVM
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" asp-route="Settings" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Active" />
                    <input type="hidden" asp-for="CreateDate" />
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["username"]</label>
                        <input type="text" class="form-control" asp-for="UserName">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">@localizer["password"]</label>
                        <input type="password" class="form-control" asp-for="Password" value="@Model.Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">@localizer["save"]</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/jquery/jquery.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

@if (TempData["info"] != null)
{
    <script type="text/javascript" charset="utf-8">
    window.onload = function () {
        swal(`@Html.Raw(TempData["info"].ToString())`, {
                buttons: [false, `@localizer["swalOKbutton"].ToString()`],
                icon:'info'
                });
            }
    </script>
}